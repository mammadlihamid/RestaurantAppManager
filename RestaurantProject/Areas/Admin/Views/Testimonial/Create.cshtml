@model Testimonial

<style>
    .ck-editor__editable[role="textbox"] {
        min-height: 300px;
    }
</style>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fullname" class="control-label">Ad, soyad</label>
                <textarea id="description" asp-for="Fullname" class="form-control"></textarea>
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label">Mesaj</label>
                <textarea id="description" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label">Vəzifə</label>
                <textarea id="description" asp-for="Position" class="form-control"></textarea>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Əlavə Et" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geriyə Qayıt</a>
</div>


<script>
    ClassicEditor
        .create(document.querySelector('#description'))
</script>